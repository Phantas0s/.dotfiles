#!/bin/bash

##########################
# STARTUP FOR BASH / ZSH #
##########################

if [ "$0" = "bash" ] || [ "$0" = "-bash" ] || [ "$0" = "/bin/bash" ] 
  then
    # bash sourcing
    SCRIPT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
else
    # zsh sourcing
    SCRIPT_PATH="${0:A:h}"
    source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
    source $DOTFILES/antibody/plugins.sh
    source $SCRIPT_PATH/zsh/scripts.zsh
    source $SCRIPT_PATH/zsh/notifyosd.zsh # notify when a long command line is done

    # fzf goodies
    command -v "fzf" >/dev/null && source $SCRIPT_PATH/zsh/scripts_fzf.zsh
fi

# source startup scripts
source $SCRIPT_PATH/aliases/aliases
source $SCRIPT_PATH/env
